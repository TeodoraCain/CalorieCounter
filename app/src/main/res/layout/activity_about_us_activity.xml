<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AboutUsActivity">

    <!--    toolbar    -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/eatwellgreen"
        android:elevation="4dp"
        android:foregroundTint="@color/white"
        android:popupTheme="@style/Theme.CalorieCounter"
        android:theme="@style/Theme.AppCompat.Light"
        app:subtitleTextColor="@color/white"
        app:title="About Us"
        app:titleMarginStart="100dp"
        app:titleTextAppearance="@style/Theme.CalorieCounter"
        app:titleTextColor="@color/white" />

    <!-- Intro description -->
    <TextView
        android:id="@+id/tvAboutIntro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_us_intro_1"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="18dp"
        android:textColor="@color/black"
        android:lineSpacingExtra="4dp"
 />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_us_intro_2"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginHorizontal="18dp"
        android:textColor="@color/black"
        android:lineSpacingExtra="4dp"
   />


    <!-- Fruits Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_margin="18dp"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fruits"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_us_fruits"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:lineSpacingExtra="2dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Vegetables Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="18dp"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vegetables"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_us_vegetables"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:lineSpacingExtra="2dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Other Foods Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="18dp"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other_foods"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_us_other_foods"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:lineSpacingExtra="2dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Development note -->
    <TextView
        android:id="@+id/tvAboutNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_us_outro"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_margin="18dp"
        android:textColor="@color/black"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="12dp" />

</LinearLayout>